class Solution {
    public int[] sortArrayByParity(int[] A) {
        int[] arr = new int[A.length];
        int first = 0;
        int last = A.length - 1;
        for (int i = 0; i < A.length; i++) {
            if (A[i] % 2 != 0) {
                arr[last] = A[i];
                last--;
            }
            else {
                arr[first] = A[i];
                first++;
            }
        }
        return arr;
    }
}
